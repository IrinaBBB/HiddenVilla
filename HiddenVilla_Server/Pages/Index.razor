@page "/"

<h2 class="bg-light border p-2">
    First Room
</h2>

Room: @blazorRoom.RoomName
<br />
Active: @blazorRoom.IsActive
<br />
Price: @blazorRoom.Price
<br />

<input type="number" @bind-value="blazorRoom.Price" @bind-value:event="oninput"/><br />
<input type="checkbox" @bind-value="blazorRoom.IsActive" checked="@(blazorRoom.IsActive ? "checked" : null)" /><br />

<select @bind="selectedRoomProp">
    @foreach (var prop in blazorRoom.RoomProps)
    {
        <option value="@prop.Name">@prop.Name</option>
    }
</select>
<span>The Room Property selected is: @selectedRoomProp</span>
<div>@blazorRoom.RoomProps.FirstOrDefault(p => p.Name == selectedRoomProp).Value</div>


@code {


    static Model.BlazorRoom blazorRoom = new Model.BlazorRoom
    {
        Id = 1,
        RoomName = "Villa Suite",
        IsActive = true,
        Price = 499,
        RoomProps = new List<Model.BlazorRoomProp>
        {
            new Model.BlazorRoomProp {Id = 1, Name = "Sq Feet", Value = "100"},
            new Model.BlazorRoomProp {Id = 2, Name = "Occupancy", Value = "3"}
        }
    };

    string selectedRoomProp = blazorRoom.RoomProps.FirstOrDefault().Name;
}

